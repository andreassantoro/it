<?xml version="1.0" encoding="utf-8"?>

<openerp>
 
    <data>

		<!-- Create view for nats -->
		<record model="ir.ui.view" id="it_equipment_nat_form">
			<field name="name">it.equipment.nat.form</field>
			<field name="model">it.equipment.nat</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Rule">
					<separator string="Rules Registry" colspan="4" />
					<field name="name" colspan="4"/>
					<field name="source_port"/>
					<field name="destination_port"/>
					<field name="source_address"/>
					<field name="destination_address"/>
					<field name="type"/>
					<field name="permission"/>
				</form>
			</field>
		</record>

		<!-- Tree view for nats grill on equipments -->
		<record model="ir.ui.view" id="it_equipment_nat_tree">
			<field name="name">it.equipment.nat.tree</field>
			<field name="model">it.equipment.nat</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Rules Registry">
					<field name="name" colspan="4"/>
					<field name="source_port"/>
					<field name="destination_port"/>
					<field name="source_address"/>
					<field name="destination_address"/>
					<field name="permission"/>
					<field name="type"/>
				</tree>
			</field>
		</record>

    </data>
    
</openerp>
