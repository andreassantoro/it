<openerp>

    <data>

        <!-- Access Change -->
        <record model="ir.ui.view" id="it_access_change_tree">
            <field name="name">it.access.change.tree</field>
            <field name="model">it.access.change</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Changes">
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="creation_date"/>
                    <field name="note"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="it_access_change_form">
            <field name="name">it.access.change.form</field>
            <field name="model">it.access.change</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Access Change" version="7.0">
                    <sheet>
                        <separator string="Change entry" colspan="4"/>
                        <field name="name" colspan="4"/>
                        <field name="user_id"/>
                        <field name="creation_date"/>
                        <separator string="Note" colspan="4"/>
                        <field name="note"/>
                    </sheet>
                </form>
            </field>
        </record>

    </data>

</openerp>

