<?xml version="1.0" encoding="utf-8"?>

<openerp>
	
    <data>

		<!-- Create view for rules -->
		<record model="ir.ui.view" id="it_equipment_rule_form">
			<field name="name">it.equipment.rule.form</field>
			<field name="model">it.equipment.rule</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Rules Registry">
					<separator string="Rules Registry" colspan="4" />
					<field name="name" colspan="4"/>
					<field name="source_port"/>
					<field name="destination_port"/>
					<field name="source_address"/>
					<field name="destination_address"/>
					<field name="permission"/>
				</form>
			</field>
		</record>

		<!-- Tree view for rules grill on equipments -->
		<record model="ir.ui.view" id="it_equipment_rule_tree">
			<field name="name">it.equipment.rule.tree</field>
			<field name="model">it.equipment.rule</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Rules Registry">
					<field name="name" colspan="4"/>
					<field name="source_port"/>
					<field name="destination_port"/>
					<field name="source_address"/>
					<field name="destination_address"/>
					<field name="permission"/>
				</tree>
			</field>
		</record>

    </data>
</openerp>
